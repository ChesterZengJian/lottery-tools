<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:LotteryTools.ViewModels"
             x:Class="LotteryTools.MainPage">

    <ContentPage.BindingContext>
        <viewModels:LotteryCodeViewModel />
    </ContentPage.BindingContext>

    <Grid  RowDefinitions="Auto,Auto, *" Padding="28">
        <SearchBar Grid.Row="0"  x:Name="searchBar" Placeholder="请输入彩票代码..." FontSize="20">
            <SearchBar.Behaviors>
                <toolkit:EventToCommandBehavior
                    EventName="TextChanged"
                    Command="{Binding PerformSearchCommand}"
                    CommandParameter="{Binding Source={x:Reference searchBar}, Path=Text}" />
            </SearchBar.Behaviors>
        </SearchBar>

        <Picker  Grid.Row="1"  
                 Title="选择彩票类型" FontSize="20" HeightRequest="55" 
                 HorizontalTextAlignment="Center" VerticalTextAlignment="Center" IsVisible="True" 
                 ItemsSource="{Binding Categories}"
                 ItemDisplayBinding="{Binding Name}"
                 SelectedItem="{Binding SelectedCategory}" 
                 >
        </Picker>

        <ListView Grid.Row="2" x:Name="searchSportResults" ItemsSource="{Binding SearchResults}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding .}" TextColor="White" FontSize="21" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</ContentPage>
